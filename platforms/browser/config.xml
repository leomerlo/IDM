<?xml version='1.0' encoding='utf-8'?>
<widget id="com.souschef.www" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Sous Chef</name>
    <description>
        Tu asistente de cocina.
    </description>
    <author email="merloleandro@gmail.com" href="http://leomerlo.com">
        Leo Merlo
    </author>
    <icon src="icon.png" />
    <splash src="splash.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="permissions" value="none" />
    <preference name="target-device" value="universal" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <preference name="splashScreenDelay" value="4000" />
</widget>
